<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="com.example.sarvesh.mycaloriecounter.PersonalInfo">

    <EditText
        android:id="@+id/editHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:ellipsize="start"
        android:hint="Enter Height in cms"
        android:inputType="numberDecimal"
        android:layout_above="@+id/editWeight"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

    <EditText
        android:id="@+id/editWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:ellipsize="start"
        android:hint="Enter Weight in kgs"
        android:inputType="numberDecimal"
        android:layout_above="@+id/editAge"
        android:layout_alignLeft="@+id/editHeight"
        android:layout_alignStart="@+id/editHeight"
        android:layout_marginBottom="9dp" />

    <EditText
        android:id="@+id/editAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter age in yrs"
        android:inputType="numberDecimal"
        android:layout_above="@+id/category"
        android:layout_alignLeft="@+id/editWeight"
        android:layout_alignStart="@+id/editWeight" />

    <Spinner
        android:id="@+id/category"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:spinnerMode="dialog"
        android:layout_above="@+id/criteria"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />

    <Spinner
        android:id="@+id/criteria"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:spinnerMode="dialog"
        android:layout_above="@+id/btnSubmit"
        android:layout_alignLeft="@+id/category"
        android:layout_alignStart="@+id/category"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_alignTop="@+id/btnSubmit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=" Your BMI is 0.00.\n You are underweight.\n Maximum intake of calories daily is 1500 cal."
            android:textAppearance="@android:style/TextAppearance.Medium" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:srcCompat="@drawable/height"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_alignTop="@+id/editHeight"
        android:layout_toLeftOf="@+id/category"
        android:layout_toStartOf="@+id/category" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/weight"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_alignTop="@+id/editWeight"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:srcCompat="@drawable/age"
        android:layout_below="@+id/editWeight"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />


</RelativeLayout>
